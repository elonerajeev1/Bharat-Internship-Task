<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/styles.css">
        <title>Blog Website</title>
    </head>

    <body>
        <header>
            <h1>My Blog</h1>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/compose">Compose</a></li>
                </ul>
            </nav>
        </header>

        <div class="container">
            <% posts.forEach(post=> { %>
                <h2>
                    <%= post.title %>
                </h2>
                <p>
                    <%= post.content %>
                </p>
                <% }); %>
        </div>

        <footer>
            <p>&copy; 2024 My Blog. All rights reserved.</p>
        </footer>
    </body>

</html>
